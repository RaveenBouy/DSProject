<style>

    .col-centered{
    float: none;
    margin: 0 auto;
    }

    .zoom:hover {
  -ms-transform: scale(1.05); /* IE 9 */
  -webkit-transform: scale(1.05); /* Safari 3-8 */
  transform: scale(1.05); 
    }

    .itemShadow {
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.05), 0 6px 20px 0 rgba(0, 0, 0, 0.05);
    }

    .middle {
  transition: .5s ease;
  opacity: 0;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  text-align: center;
}

.imageBox:hover .image {
  opacity: 0.3;
}

.imageBox:hover .middle {
  opacity: 1;
}

.text {
  background-color: #320D7E;
  border-radius:48px;
  color: white;
  font-size: 20px;
  padding: 32px 64px;
}
</style>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Classified Ads";
}



<div class="container" style="margin-top:50px">
    @{ WebSite.Models.AdvertisementModel advert = (WebSite.Models.AdvertisementModel)ViewData["Adverts"];
        <h1 style="font-size: 50px"><strong>@advert.ItemName</strong></h1>
        <p><strong><i>Uploaded On: @advert.Created || Views: @advert.ViewCount</i></strong></p>
        <div class="row">
            <div class="col-sm-8">
                <div class="thumbnail imageBox">
                    <img src="data:image/png;base64,@advert.Image" class="image" id="iImage" alt="Product Image" style="width:100%; height:600px">
                    <div class="middle">
                        <div class="text">Rs. @advert.Price</div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="row zoom thumbnail itemShadow">
                    <div class="col-sm-4" style="margin-top:10px">
                        <img src="~/images/iconsMobile.png" class="center-block" style="width:60px; height:60px" />
                    </div>
                    <div class="col-sm-8" style="margin-top:10px">
                        <p style="font-size: 12px; margin:0"><i>Contact</i></p>
                        <p style="font-size: 26px;"><strong>@advert.Tele</strong></p>
                    </div>
                </div>
                <div class="row zoom thumbnail itemShadow">
                    <div class="col-sm-4" style="margin-top:10px">
                        <img src="~/images/iconsLocation.png" class="center-block" style="width:60px; height:60px" />
                    </div>
                    <div class="col-sm-8" style="margin-top:10px">
                        <p style="font-size: 12px; margin:0"><i>Location</i></p>
                        <p style="font-size: 26px;"><strong>@advert.City</strong></p>
                    </div>
                </div>
                <div class="row zoom thumbnail itemShadow">
                    <div class="col-sm-4" style="margin-top:10px">
                        <img src="~/images/iconsCategorize.png" class="center-block" style="width:60px; height:60px" />
                    </div>
                    <div class="col-sm-8" style="margin-top:10px">
                        <p style="font-size: 12px; margin:0"><i>Category</i></p>
                        <p style="font-size: 26px;"><strong>@advert.ItemCategory</strong></p>
                    </div>
                </div>
                <div class="row zoom thumbnail itemShadow">
                    <div class="col-sm-4" style="margin-top:10px">
                        <img src="~/images/iconsNew.png" class="center-block" style="width:60px; height:60px" />
                    </div>
                    <div class="col-sm-8" style="margin-top:10px">
                        <p style="font-size: 12px; margin:0"><i>Condition</i></p>
                        <p style="font-size: 26px;"><strong>@advert.Con</strong></p>
                    </div>
                </div>
                <div class="row zoom thumbnail itemShadow">
                    <div class="col-sm-4" style="margin-top:10px">
                        <img src="~/images/iconsCount.png" class="center-block" style="width:60px; height:60px" />
                    </div>
                    <div class="col-sm-8" style="margin-top:10px">
                        <p style="font-size: 12px; margin:0"><i>Availability</i></p>
                        <p style="font-size: 26px;"><strong>@advert.ItemCount</strong></p>
                    </div>
                </div>
                <div class="row zoom thumbnail itemShadow">
                    <div class="col-sm-4" style="margin-top:10px">
                        <img src="~/images/iconsHandshake.png" class="center-block" style="width:60px; height:60px" />
                    </div>
                    <div class="col-sm-8" style="margin-top:10px">
                        <p style="font-size: 12px; margin:0"><i>Negotiable</i></p>
                        <p style="font-size: 26px;"><strong>@advert.Negotiable</strong></p>
                    </div>
                </div>
            </div>
        </div>

        <div style="margin-top: 25px; margin-bottom: 50px">
            <div class="row">
                <div class="col-sm-8">
                    <p style="font-size:16px"><i>@advert.ItemDescription</i></p>
                </div>
            </div>
        </div>
    }
</div>




